# Functions needed for experiment input

library(SummarizedExperiment)


# Data input functions will be implemented here
# Goal: get a SummarizedExperiment object that contains data
# Condition names must be "library" and "selected"

#' Title
#'
#' @return
#' @export
#'
#' @examples
poolscreen_dataset <- function() {
    counts <- read.delim('/home/katharina/Documents/synced/method_development/adjusted_pvalue_method/results_200_380_380_30_0.1_0.01_0.79_2_10_3_50000_7.tsv',
                         sep="\t", skip=1)
    counts_matrix <- cbind(counts$library0, counts$R0_0, counts$R1_0)
    rowData <- data.frame(sgRNA_id = counts$sgrna_id)
    colData <- data.frame(timepoint = c("T0", "R1", "R2"))

    SummarizedExperiment(assays=list(counts=counts_matrix),
                         rowData=rowData, colData=colData)

}
